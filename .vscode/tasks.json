{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ сборка активного файла",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-g",
                "${file}",
                "-I /usr/lib/x86_64-linux-gnu/boost",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
    ]
}